<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/type_message_light</item>
        <item name="colorPrimaryDark">@color/type_message_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeB" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/type_message_light</item>
        <item name="colorPrimaryDark">@color/type_message_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeC" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/type_message_light</item>
        <item name="colorPrimaryDark">@color/type_message_dark</item>
        <item name="colorAccent">@color/type_message_light</item>

    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="MaterialAnimations.TextAppearance.Title.Inverse" parent="android:TextAppearance.Material.Title">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="Button" parent="Theme.AppCompat">
        <item name="colorControlHighlight">@color/background_redm</item>
        <item name="colorButtonNormal">@color/type_message_dark</item>
    </style>

    <style name="ButtonUnpay" parent="Theme.AppCompat">
        <item name="colorControlHighlight">@color/background_redm</item>
        <item name="colorButtonNormal">@color/grey</item>
    </style>


    <style name="AppTheme.CenterAnimation">
        <item name="android:windowBackground">@drawable/logo</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
