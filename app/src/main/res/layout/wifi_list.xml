<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="16dp">

    <ImageView
        android:id="@+id/wifi_icon"
        android:layout_alignParentTop="true"
        android:layout_width="@dimen/avator_size"
        android:layout_height="@dimen/avator_size"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/wifi" />

    <android.support.v7.widget.AppCompatTextView
        android:textAppearance="?attr/textAppearanceListItem"
        android:id="@+id/access_point"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/md_keylines"
        android:layout_toEndOf="@+id/wifi_icon"
        android:text="Java Westlands"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/article_subheading" />

    <ImageView
        android:id="@+id/add_paybill"
        android:layout_below="@id/access_point"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_width="30dp"
        android:clickable="true"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_add" />

    <LinearLayout
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:layout_below="@id/access_point"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/paybill_check"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_check_48" />

        <android.support.v7.widget.AppCompatTextView
            android:textAppearance="?attr/textAppearanceListItem"
            android:id="@+id/paybill"
            android:layout_gravity="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="added to DB"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp" />



    </LinearLayout>


</RelativeLayout>

